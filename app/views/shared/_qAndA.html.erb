<div class="container">
  <div class="panel panel-default" id="question_form" hidden>
    <div class="panel-body">
      <div class="form-group" id="warning_q">
        <label for="question">Question:</label>
        <input type="text" class="form-control" id="question">
        <span class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
      </div>
      <center>
        <div>
          <button type="button" class="btn btn-primary btn-lg" style="float:left" id="ask_btn">ask question</button>
          <button type="button" class="btn btn-danger btn-sm" style="float:right" id="request_game_over">nothing left to ask</button>
        </div>
      </center>
    </div>
  </div>
</div>

<div class="container">
  <div class="panel panel-default" id="question_display" hidden>
    <div class="panel-body">
      <label>Question:</label><p id="question_text"></p>
    </div>
  </div>
</div>

<div class="container">
  <div class="panel panel-default" id="answer_form" hidden>
    <div class="panel-body">
      <div class="form-group" id="warning_a">
        <label for="answer">Answer:</label>
        <input type="text" class="form-control" id="answer">
        <span class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
      </div>
      <center>
        <button type="button" class="btn btn-primary btn-lg" id="answer_btn">submit answer</button>
      </center>
    </div>
  </div>
</div>

<div class="container">
  <div class="panel panel-default" id="answers_display" hidden>
    <div class="panel-body">
      <div class"container">
        <div class="panel panel-default">
          <div class="panel-body">
            <label>Your answer:</label><p id="this_answer_text">...</p>
          </div>
        </div>
      </div>
      <div class"container">
        <div class="panel panel-default">
          <div class="panel-body">
            <label>Other player's answer:</label><p id="other_answer_text">...</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
